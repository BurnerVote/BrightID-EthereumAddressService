{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "src/index.js",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "jsx": "react",
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
  ]
}
